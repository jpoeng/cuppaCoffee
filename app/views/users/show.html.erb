<ul class="nav nav-tabs" role="tablist">
  <li><%= link_to 'Home', drinks_path %></li>
  <li><%= link_to 'Add drink', new_drink_path %></li>
  <li class="active"><%= link_to 'Profile', current_user %></li>
</ul>

<h1>Hello, <%= current_user.first_name %>!</h1>

<table>
  <thead>
    <tr>
      <th>Added</th>
      <th>Drink</th>
      <th>Brand</th>
      <th>Cups</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.drinks.each do |drink| %>
      <tr>
        <td><%= drink.created_at.strftime("%x") %></td>
        <td><%= drink.name %></td>
        <td><%= drink.brand %></td>
        <td><%= drink.cups %></td>
        <td><%= link_to 'Show', drink %></td>
        <td><%= link_to 'Edit', edit_drink_path(drink) %></td>
        <td><%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table><br />
