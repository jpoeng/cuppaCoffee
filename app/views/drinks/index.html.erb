<table class="table-bordered table-striped table-responsive table-condensed">
  <thead>
    <tr>
      <th colspan="5">Coffee, coffee, coffee!</th>
    </tr>
  </thead>

  <tbody>
    <% @drinks.each do |drink| %>
    <% user = User.find(drink.user_id) %>
      <tr>
        <td><span class="glyphicon glyphicon-heart"></span> <%= user.first_name %> had a <%= drink.name %> from <%= drink.brand %> on <%= drink.created_at.strftime("%x") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

